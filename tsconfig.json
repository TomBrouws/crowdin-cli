{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "types": ["node", "jest"]
  },
  "exclude": ["dist", "node_modules", "**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
