{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch -i src/cli.ts --target node",
    "build": "tsdx build -i src/cli.ts --target node",
    "test": "tsdx test",
    "lint": "tsdx lint src tests",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "tsc:check": "tsc --noEmit"
  },
  "peerDependencies": {},
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn tsc:check"
    }
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "name": "crowdin-test",
  "author": "CosmaTrix",
  "module": "dist/crowdin-test.esm.js",
  "size-limit": [
    {
      "path": "dist/crowdin-test.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/crowdin-test.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "setupFiles": [
      "./tests/setup.ts"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/commander": "^2.12.2",
    "@types/mkdirp": "^1.0.1",
    "@types/sanitize-html": "^1.27.1",
    "@types/shelljs": "^0.8.8",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@crowdin/crowdin-api-client": "^1.10.3",
    "@formatjs/cli": "^1.1.12",
    "commander": "^7.0.0",
    "dotenv": "^8.2.0",
    "mkdirp": "^1.0.4",
    "sanitize-html": "^2.3.2",
    "shelljs": "^0.8.4"
  }
}
