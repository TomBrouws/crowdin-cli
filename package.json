{
  "name": "@mollie/crowdin-cli",
  "version": "2.0.0",
  "description": "Utility to sync translations with Crowdin",
  "main": "dist/index.js",
  "license": "MIT",
  "bin": {
    "mollie-crowdin": "bin/mollie-i18n"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "prettier": {
    "trailingComma": "es5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn tsc:check"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "yarn run clean && tsc -p tsconfig.build.json",
    "build:check": "tsc -p tsconfig.build.json --noEmit",
    "test": "NODE_ENV=test jest",
    "lint:js": "eslint \"./src/**/*.+(ts|tsx)\"",
    "tsc:check": "tsc --noEmit",
    "prepare": "yarn build"
  },
  "dependencies": {
    "@crowdin/crowdin-api-client": "^1.10.3",
    "@formatjs/cli": "^1.1.12",
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "commander": "^7.0.0",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "mkdirp": "^1.0.4",
    "sanitize-html": "^2.3.2",
    "shelljs": "^0.8.4"
  },
  "directories": {
    "dist": "dist"
  },
  "devDependencies": {
    "@mollie/eslint-config-typescript": "^1.4.0",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.20",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@types/sanitize-html": "^1.27.1",
    "@types/shelljs": "^0.8.8",
    "eslint": "^7.19.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-intl": "^5.12.1",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  },
  "author": {
    "name": "Angelo Abdoelsamath",
    "email": "angelo.abdoelsamath@mollie.com"
  },
  "contributors": [
    {
      "name": "Damiano Trimboli",
      "email": "damiano.trimboli@mollie.com"
    },
    {
      "name": "Vernon de Goede",
      "email": "vernon@mollie.com"
    },
    {
      "name": "Philipp Rappold",
      "email": "philipp.rappold@mollie.com"
    }
  ],
  "resolutions": {
    "minimist": "^1.2.2",
    "acorn": "^7.1.1"
  }
}
